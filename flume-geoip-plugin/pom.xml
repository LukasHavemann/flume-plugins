    <artifactId>flume-geoip-plugin</artifactId>
    <packaging>jar</packaging>
    <name>Flume GeoIP Plugin</name>
    <description>
        Event Sink Decorator which augments Flume Event with IP localisation based on MaxMind GeoIP
    </description>
    <url>https://github.com/figarocms/flume-plugins/flume-geoip-plugin</url>

    <properties>
        <geoip.version>1.2.5</geoip.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.kohsuke</groupId>
            <artifactId>geoip</artifactId>
            <version>${geoip.version}</version>
        </dependency>
    </dependencies>

</project>
